<div id="surfaceinfodiv" class="dialog-v">
	<div id="surfaceinfoTmpl"
		class="lab-int fg-buttonset fg-buttonset-single">
		<div id="span-close" class="span-c" title="Close"
			onclick="javascript:closeDialog('surfaceinfodiv');"></div>
		<div id="surfaceinfo-help" class="span-h" title="" onclick="javascript:openHelpWindow('surface_help');"></div>
		<div class="lineBreak05p" id="detailsDiv"></div>
		<div id="surfaceInfo_DetailsBody"></div>
		<div id="surfaceInfo_AttachmentBody"></div>
	</div>
</div>
<script id="surfaceInfo_DetailsTmpl" type="text/x-jquery-tmpl">
<form id="SurfaceForm" form class="styleForm formPattern">	
<table id="surfaceInfoTable"  class="formTable">
			<input type="hidden"  class="int" id="hid-surfaceGid" name="hid-surfaceGid" value="${gid}"/>
			<input type="hidden"  class="int" id="thegeom" name="thegeom" value="${thegeom}"/>
				<tr id="td-SurfaceID">
					<td>
						<label for="pid" id="lblsurfaceid">Surface ID : </label>
						<input type="text"  class="int" id="surfaceid" name="surfaceid" value="${surfaceid}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label for="pid" id="lblsurfacerowid">RoW ID : </label>
						<input type="text"  class="int" id="roWID" name="RoWID" value="${rowId}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label id="lblsurfacetype">Type : </label>
						
						<select name="surfaceType" id="surfaceType" class="int">        						
        				</select>
												
					</td>
				</tr>
				<tr>
					<td>
						<label for="pid" id="lblsurfaceavgwidth">Average Width : </label>
						<input type="text"  class="int" id="SurfaceWidth" name="SurfaceWidth" value="${averageWidth}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label for="pid" id="surfacelength">Length : </label>
						<input type="text"  class="int" id="SurfaceLength" name="SurfaceLength" value="${length}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label id="lblsurfacecondition">Condition : </label>
						<select name="surfaceCondition" id="surfaceCondition" class="int">        						
        				</select>
												
					</td>
				</tr>
				<tr>
					<td>
						<label id="lblsufacesurveyor">Surveyor : </label>
						<select name="surfaceSurveyor" id="surfaceSurveyor" class="int">        						
        				</select>
					</td>
				</tr>
				<tr>	
					<td colspan="2">
						<label for="sum" id="lblsurfacenotes">Notes  : </label>
						<textarea id="surfaceNotes" class="qb_querybox" rows="2" name="surfaceNotes" spellcheck="false">${notes}</textarea>				
					</td>
				</tr>
				<tr>
					<td>
						<label for="pid" id="lbllastsurfaced">Last Surfaced : </label>
						<input type="text"  class="int" id="lastSurfaceDate" name="lastSurfaceDate" value="${lastsurfacedate}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label for="pid" id="lblsurfacelastinspected">Last Inspected : </label>
								
						<input type="text"  class="int" id="surfaceLastInspected" name="surfaceLastInspected" value="${lastInspected}"/>
					</td>
				</tr>
				<tr>
					<td>
						<label id="lblsurfaceunresolvedissue">Un-resolved issues :</label>
						<select name="surfaceUnresolvedIssues" id="surfaceUnresolvedIssues" class="int" disabled="disabled">						
							<!--<option value="false">No</option>	
							<option value="true">Yes</option>-->			
						 </select>		
					</td>
				</tr>
		</table>
</form>
<div class="buttons btn-holder-float">
			
				<span class="lesserbtn" id="btnUpdateSurface"><input id="btnSurfaceEdit" type="button" value="Edit"/></span>  
				<span class="lesserbtn" id="btnCancelSurface"><input  id="btnSurfaceCancel" type="button" value="Cancel" /></span>
				<span class="lesserbtn" id="btnSaveSurface"><input id="btnSurfaceSave" type="button" value="Save" onclick="saveSurface();"/></span>
</div>	
	<div class="nxtPrevBTNHolder">
				<div class="prvbtn">				
				<a href="#" onclick="getPreviousSurface(${gid},'${surfaceid}')">
				<span>Previous</span></a>			

				</div>  
				<div class="nxtbtn">				
				
				<a href="#" onclick="getNextSurface(${gid},'${surfaceid}')">
				<span>Next</span></a>		
				</div>  				
			</div>	
		<ul class="footerBtns">
			<li>
					<a title="View Surface Links" id="surfacelink_1" class="btn01" href="#" onclick="javascript:surfaceLink('${rowId}','${surfaceid}');return false;">
					<span class="ViewPILink">View Surface Links</span></a>	
					</li>
					<li>
					<a title="Locate on Map" id="surfacelink_2" class="btn01" href="#" onclick="javascript:zoomToSurface();return false;">
					<span class="mapIT">Locate on Map</span></a>
					</li>
					<li>	
					<a title="Create Issue" id="surfacelink_3" class="btn01" href="#" onclick="javascript:createIssueOnSurface(${gid},'${rowId}');return false;">
					<span class="createIssue">Create Issue</span></a>	
					</li>

		</ul>





</script>

<script id="surfaceInfo_AttachmentTmpl" type="text/x-jquery-tmpl">	
		<div id="SurattachmentDiv" class="attachmentcontainer">
		<div class="blueboxHeader"></div>
		
		<div class="blueboxContent">
	<div id="SurfileAttachmentDiv">	</div>
    <div class="outertableup">    
		<div id="AttchFileList" class="lab-int">
        	<table width="100%" cellpadding="1" cellspacing="1">        	
                	<!--start:heading-->
                    <tr>
                        <td colspan="2" class="subTitle">
                            <span id="surface_attached_files">Attached Files</span>
                        </td>
                   </tr>
               		<!--end:heading--> 
            </table>
			<table width="100%" cellspacing="1" cellpadding="1" border="0">
				<thead>
					<tr>						
						<th class="headercolorup"><span id="surface_file">File</span></th>
						<th class="headercolorup"><span id="surface_action">Action</span></th>
					</tr>
				</thead>
				
				<tbody id="SurAttchFileListBody">
			
				</tbody>
				
			</table>
		</div>
    </div>
	
	</div>
	
	<div class="blueboxFooter"></div>
	
	</div>
</script>
